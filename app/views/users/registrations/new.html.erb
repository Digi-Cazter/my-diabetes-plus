<div class="modal-body">
  <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "new_user_form"}) do |f| %>

    <table>
      <tr>
        <td class="text-right">Email:</td>
        <td><%= f.email_field :email, autofocus: true %></td>
      </tr>
      <tr>
        <td class="text-right">Password:</td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td class="text-right">Confirm Password:</td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
    <% if devise_mapping.rememberable? %>
      <div>Remember Me <%= f.check_box :remember_me, style: "margin-bottom: 5px;" %></div>
    <% end %>
  <% end %>
</div>

<div class="modal-footer">
  <%= button_tag "Cancel", data: {dismiss: :modal} %>
  <%= button_tag "Sign Up", onclick: "$('#new_user_form').submit()" %>
</div>